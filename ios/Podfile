# ios/Podfile

platform :ios, '12.0'
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# Carga el helper oficial de Flutter desde tu SDK
require File.join(ENV['FLUTTER_ROOT'], 'packages', 'flutter_tools', 'bin', 'podhelper')

# Forzamos frameworks estÃ¡ticos y cabeceras modulares
use_frameworks! :linkage => :static
use_modular_headers!

target 'Runner' do
  # Instala todos los pods que Flutter necesita (incluye firebase_messaging, etc)
  flutter_install_all_ios_pods(__dir__)
end

post_install do |installer|
  # Ajustes adicionales que Flutter requiere
  flutter_additional_ios_build_settings(installer)
end
