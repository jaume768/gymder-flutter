# ios/Podfile

platform :ios, '12.0'
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# Helper de Flutter
require File.join(ENV['FLUTTER_ROOT'], 'packages', 'flutter_tools', 'bin', 'podhelper')

# Frameworks dinámicos + cabeceras modulares
use_frameworks!
use_modular_headers!

target 'Runner' do
  # Instala TODOS los pods que declara Flutter
  flutter_install_all_ios_pods(__dir__)
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    # Ajustes estándar de Flutter
    flutter_additional_ios_build_settings(target)

    # Permitir non-modular includes en todos los pods
    target.build_configurations.each do |config|
      config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
    end
  end
end
