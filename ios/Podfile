# ios/Podfile

platform :ios, '11.0'
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# Importa las utilidades de Flutter para CocoaPods
require File.join(File.dirname(File.realpath(__FILE__)), 'Flutter', 'podhelper')

use_frameworks! :linkage => :static
use_modular_headers!

target 'Runner' do
  # Instala todos los pods de Flutter (incluye firebase_messaging, etc)
  flutter_install_all_ios_pods(File.dirname(File.realpath(__FILE__)))
end

post_install do |installer|
  # Ajustes extras que Flutter necesita en el project.pods
  flutter_additional_ios_build_settings(installer)
end
